{
  "$schema": "http://json.schemastore.org/template",
  "author": "BepInEx",
  "classifications": [ "BepInEx", "BepInEx 6" , "Plugin" , "CoreCLR", ".NET Core" ],
  "identity": "BepInEx6.PluginTemplate.NET.CoreCLR",
  "name": "BepInEx 6 .NET Core Plugin",
  "shortName": "bep6plugin_coreclr",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "sourceName": "BepInEx6.PluginTemplate.NET.CoreCLR",
  "symbols": {
    "TargetFramework": {
      "type": "parameter",
      "description": "The target framework for the project",
      "datatype": "text",
      "defaultValue": "net6.0",
      "replaces": "net6.0"
    },
    "PluginTitle": {
      "type": "parameter",
      "description": "The title of the plugin.",
      "datatype": "text"
    },
    "PluginTitleGen": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "PluginTitle",
        "fallbackVariableName": "name"
      },
      "replaces": "{Product}"
    },
    "Version": {
      "type": "parameter",
      "description": "Plugin version",
      "datatype": "text",
      "defaultValue": "1.0.0"
    },
    "VersionImpl": {
      "type": "generated",
      "generator": "join",
      "replaces": "<Version>1.0.0</Version>",
      "parameters": {
        "symbols": [
          {
            "type": "const",
            "value": "<Version>"
          },
          {
            "type": "ref",
            "value": "Version"
          },
          {
            "type": "const",
            "value": "</Version>"
          }
        ]
      }
    }
  }
}